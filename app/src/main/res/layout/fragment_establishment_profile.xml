<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    tools:context=".fragment.EstablishmentProfileFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_establishment_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/templateestablishmentprofile"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
        app:strokeColor="@color/watergreen"
        app:strokeWidth="4dp" />

    <TextView
        android:id="@+id/profile_establishment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="Nome do Estabelecimento" />

    <TextView
        android:id="@+id/profile_establishment_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Edite suas informações"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/divider" />

    <TextView
        android:id="@+id/profile_establishment_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@drawable/ic_logout_24dp"
        android:drawablePadding="8dp"
        android:focusable="true"
        android:gravity="center"
        android:padding="16dp"
        android:text="Sair"
        android:textColor="@color/black"
        android:textSize="16sp" />

</LinearLayout>
