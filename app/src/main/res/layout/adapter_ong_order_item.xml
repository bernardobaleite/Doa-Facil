<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <!-- Main Info Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_main_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/button_cancel_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close_24dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@android:color/darker_gray"
                tools:visibility="visible" />

            <!-- THE FIX: Split into two TextViews for separate styling -->
            <TextView
                android:id="@+id/text_order_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ordem de pedido: "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_order_id_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/grey"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@id/text_order_id_label"
                app:layout_constraintEnd_toStartOf="@id/button_cancel_order"
                app:layout_constraintStart_toEndOf="@id/text_order_id_label"
                tools:text="#12345xyz" />

            <TextView
                android:id="@+id/text_order_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_order_id_label"
                tools:text="Pedido realizado em 10/11/2025" />

            <TextView
                android:id="@+id/text_order_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_order_date"
                tools:text="Contém 5 produtos" />

            <!-- STATE 1: Scheduling Form -->
            <LinearLayout
                android:id="@+id/layout_scheduling_form"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_order_summary"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecione a data e horário para retirada:" />

                <EditText
                    android:id="@+id/edit_text_schedule_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="Data (DD/MM/AAAA)" />

                <EditText
                    android:id="@+id/edit_text_schedule_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="Horário (HH:mm)" />

                <Button
                    android:id="@+id/button_confirm_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Confirmar agendamento" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_confirmed_schedule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_order_summary"
                tools:text="Agendado para: 20/12/2024 às 14:30" />

            <TextView
                android:id="@+id/text_order_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_confirmed_schedule"
                tools:text="Seu pedido já está disponível" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Expandable Section for Product List -->
        <LinearLayout
            android:id="@+id/layout_expandable_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_order_items_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="3"
                tools:listitem="@layout/adapter_order_product_item" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>