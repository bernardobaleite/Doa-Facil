<?xml version="1.0" encoding="utf-8"?>
<!-- REBUILD: Creating a hybrid toolbar that supports both centered and left-aligned titles -->
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:minHeight="?attr/actionBarSize">

    <!-- Left-aligned title, hidden by default -->
    <TextView
        android:id="@+id/toolbar_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- Centered title, visible by default -->
    <TextView
        android:id="@+id/toolbar_title_centered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20sp" />

</androidx.appcompat.widget.Toolbar>
