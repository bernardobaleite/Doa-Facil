<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EstablishmentHistoryFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_establishment_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false"
        tools:listitem="@layout/adapter_establishment_product" />

    <TextView
        android:id="@+id/text_no_history" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Nenhum histórico de doações encontrado."
        android:textSize="18sp"
        android:visibility="gone" 
        tools:visibility="visible"/>

</FrameLayout>
